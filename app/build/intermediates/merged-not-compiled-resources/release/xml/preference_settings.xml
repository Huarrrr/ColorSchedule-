<!--                android:data="mqqwpa://im/chat?chat_type=wpa&amp;uin=516053976&amp;version=1" />-->
<!--        </Preference>-->
        <Preference
            android:title="检查更新"
            app:iconSpaceReserved="false">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://www.github.com/" />
        </Preference>
        <Preference
            android:title="关于"
            app:iconSpaceReserved="false">
            <intent android:action="top.itning.yunshuclassschedule.ABOUT" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>
